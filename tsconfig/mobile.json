{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5"
  },
  "exclude": [
    "node_modules/**/*",
    "backend/**/*",
    "src/browser/**/*",
    "src/desktop/**/*"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
